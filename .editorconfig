dotnet_naming_rule.constants_should_be_pascalcase.style = pascalcase

dotnet_naming_rule.local_variables_and_parameters_should_be_camelcase.severity = warning
dotnet_naming_rule.local_variables_and_parameters_should_be_camelcase.symbols = local_variables_and_parameters
dotnet_naming_rule.local_variables_and_parameters_should_be_camelcase.style = camelcase

dotnet_naming_rule.fields_should_be__camelcase.severity = warning
dotnet_naming_rule.fields_should_be__camelcase.symbols = fields
dotnet_naming_rule.fields_should_be__camelcase.style = _camelcase

